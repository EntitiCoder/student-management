generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin-arm64"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       String @id
  username String @unique
}

model Student {
  id          String           @id
  username    String           @unique
  name        String
  surname     String
  email       String?          @unique
  phone       String?          @unique
  address     String
  img         String?
  bloodType   String
  sex         UserSex
  createdAt   DateTime         @default(now())
  // parentId    String?
  classId     Int
  gradeId     Int
  birthday    DateTime
  photo       String           @default("/avatar.png")
  attendances Attendance[]
  results     Result[]
  submissions PostSubmission[]
  class       Class            @relation(fields: [classId], references: [id], onDelete: Cascade)
  grade       Grade            @relation(fields: [gradeId], references: [id])
  // parent      Parent?       @relation(fields: [parentId], references: [id])
}

model Teacher {
  id                  String           @id
  username            String           @unique
  name                String
  surname             String
  email               String?          @unique
  phone               String?          @unique
  address             String
  img                 String?
  bloodType           String
  sex                 UserSex
  createdAt           DateTime         @default(now())
  birthday            DateTime
  classes             Class[]
  lessons             Lesson[]
  subjects            Subject[]        @relation("SubjectToTeacher")
  reviewedSubmissions PostSubmission[]
}

model Parent {
  id        String    @id
  username  String    @unique
  name      String
  surname   String
  email     String?   @unique
  phone     String    @unique
  address   String
  createdAt DateTime  @default(now())
  // students  Student[]
}

model Grade {
  id       Int       @id @default(autoincrement())
  level    Int       @unique
  classess Class[]
  students Student[]
}

model Class {
  id            Int            @id @default(autoincrement())
  name          String         @unique
  capacity      Int
  time          String        @db.VarChar(255)
  supervisorId  String?
  gradeId       Int
  photo         String?        @db.VarChar(255) // New column for the photo
  announcements Announcement[]
  grade         Grade          @relation(fields: [gradeId], references: [id])
  supervisor    Teacher?       @relation(fields: [supervisorId], references: [id])
  events        Event[]
  lessons       Lesson[]
  posts         Post[]
  students      Student[]
}

model Subject {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  lessons  Lesson[]
  teachers Teacher[] @relation("SubjectToTeacher")
}

model Lesson {
  id          Int          @id @default(autoincrement())
  name        String
  day         Day
  startTime   DateTime
  endTime     DateTime
  subjectId   Int
  classId     Int
  teacherId   String
  createdAt   DateTime     @default(now())
  assignments Assignment[]
  attendances Attendance[]
  exams       Exam[]
  class       Class        @relation(fields: [classId], references: [id], onDelete: Cascade)
  subject     Subject      @relation(fields: [subjectId], references: [id])
  teacher     Teacher      @relation(fields: [teacherId], references: [id])
}

model Image {
  id       String @id @default(cuid())
  publicId String @unique
  format   String
  version  String
}


enum PostType {
  ANNOUNCEMENT
  VOCAB
  HOMEWORK
}

model Post {
  id          Int              @id @default(autoincrement())
  createdAt   DateTime         @default(now())
  title       String           @db.VarChar(255)
  description String
  type        PostType         @default(ANNOUNCEMENT)
  dueAt       DateTime?
  classId     Int
  media       Media[]
  submissions PostSubmission[]
  class       Class            @relation(fields: [classId], references: [id], onDelete: Cascade)

  @@index([classId, type])
  @@index([dueAt])
}

model Media {
  id       Int    @id @default(autoincrement())
  url      String
  fileName String
  postId   Int
  type     String
  posts    Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
}

model Exam {
  id        Int      @id @default(autoincrement())
  title     String
  startTime DateTime
  endTime   DateTime
  lessonId  Int
  lesson    Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  results   Result[]
}

model Assignment {
  id        Int      @id @default(autoincrement())
  title     String
  startDate DateTime
  dueDate   DateTime
  lessonId  Int
  lesson    Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  results   Result[]
}

model Result {
  id           Int         @id @default(autoincrement())
  score        Int
  examId       Int?
  assignmentId Int?
  studentId    String
  assignment   Assignment? @relation(fields: [assignmentId], references: [id])
  exam         Exam?       @relation(fields: [examId], references: [id])
  student      Student     @relation(fields: [studentId], references: [id], onDelete: Cascade)
}

model Attendance {
  id        Int      @id @default(autoincrement())
  date      DateTime
  present   Boolean
  studentId String
  lessonId  Int
  lesson    Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  student   Student  @relation(fields: [studentId], references: [id],onDelete: Cascade)
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  startTime   DateTime
  endTime     DateTime
  classId     Int?
  class       Class?   @relation(fields: [classId], references: [id], onDelete: Cascade)
}

model Announcement {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  date        DateTime
  classId     Int?
  class       Class?   @relation(fields: [classId], references: [id], onDelete: Cascade)
}

model PostSubmission {
  id              Int                   @id @default(autoincrement())
  studentId       String
  postId          Int
  status          SubmissionStatus      @default(PENDING)
  submittedAt     DateTime              @default(now())
  reviewedAt      DateTime?
  reviewedById    String?
  rejectionReason String?
  teacherNote     String?
  finalPoints     Int?
  createdAt       DateTime              @default(now())
  updatedAt       DateTime              @updatedAt
  student         Student               @relation(fields: [studentId], references: [id], onDelete: Cascade)
  post            Post                  @relation(fields: [postId], references: [id], onDelete: Cascade)
  reviewer        Teacher?              @relation(fields: [reviewedById], references: [id])
  files           PostSubmissionFile[]

  @@unique([studentId, postId])
  @@index([postId, status])
  @@index([studentId, submittedAt])
}

model PostSubmissionFile {
  id           Int            @id @default(autoincrement())
  submissionId Int
  url          String
  fileName     String
  createdAt    DateTime       @default(now())
  submission   PostSubmission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
}

enum UserSex {
  MALE
  FEMALE
}

enum Day {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
}

enum MediaType {
  IMAGE @map("image/jpeg")
  PDF   @map("application/pdf")
}

enum SubmissionStatus {
  PENDING
  APPROVED
  REJECTED
}
